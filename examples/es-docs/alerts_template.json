{
  "template":"alerts*",
  "mappings":{
    "alert":{
      "properties":{
        "timestamp":{
          "format":"dateOptionalTime",
          "type":"date"
        },
        "tags":{
          "type":"string"
        },
        "summary":{
          "type":"string"
        },
        "receivedtimestatmp":{
          "format":"dateOptionalTime",
          "type":"date"
        },
        "category":{
          "index":"not_analyzed",
          "type":"string"
        },
        "events":{
          "properties":{
            "id":{
              "type":"string"
            },
            "index":{
              "type":"string"
            },
            "type":{
              "type":"string"
            }
          }
        },
        "eventsource":{
          "type":"string"
        },
        "hostname":{
          "type":"string"
        },
        "severity":{
          "type":"string"
        },
        "utctimestamp":{
          "format":"dateOptionalTime",
          "type":"date"
        }
      }
    }
  }
}